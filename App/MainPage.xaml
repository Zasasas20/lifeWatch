<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage"
             Title="">

    <Grid x:Name="items"  BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <FlexLayout Direction="Row" MaximumHeightRequest="50" BackgroundColor="Orange" Grid.Row="0">
            <Label Text="Devices" FlexLayout.Grow="1" VerticalOptions="Center" Margin="5,0,0,0" FontSize="Medium" TextColor="black"></Label>
            <ImageButton x:Name="addT" Source="plus.png" Clicked="plus_button" MaximumWidthRequest="50" Margin="0,0,5,0"></ImageButton>
        </FlexLayout>
        <FlexLayout x:Name="devices" Direction="Column" Grid.Row="2">
            <ScrollView>
                <StackLayout>
                </StackLayout>
            </ScrollView>
        </FlexLayout>
        <Label Text="" VerticalOptions="Center" FontSize="Medium" BackgroundColor="Orange" Grid.Row="3"></Label>
    </Grid>

</ContentPage>
